@model IEnumerable<FSWDFinalProject.DATA.EF.Application>

@{
    ViewBag.Title = "Index";
}

<h2 id="ListHead"></h2>
<h2 class="text-center py-5">Applications</h2>

<p id="ListCreate">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="List">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResumeFilename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerNotes)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ApplicationStatus1.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenPosition.OpenPositionId)
        </th>
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserDetail.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationDate)
        </td>
        <td>
            <a style="color: black;" href="@Url.Content("~/Content/ResumeImg/" + item.ResumeFilename)" target="_blank">Click to View Resume</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManagerNotes)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ApplicationStatus1.StatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenPosition.OpenPositionId)
        </td>

        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ApplicationId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ApplicationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationId })
            </td>
        }
    </tr>
}

</table>
